opacity-transition()
  opacity 0
  transition opacity arguments
  -webkit-transition opacity arguments
  -moz-transition opacity arguments
  -o-transition opacity arguments
  -ms-transition opacity arguments

box-shadow()
  box-shadow arguments
  -webkit-box-shadow arguments
  -moz-box-shadow arguments
  -o-box-shadow arguments

border-radius()
  -webkit-border-radius arguments
  -moz-border-radius arguments
  border-radius arguments
  
html, body
  margin 0
  height 100%

.image_container
  background url('/bg.jpg') no-repeat center center fixed; 
  -webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
  background-size: cover;
  width 100%
  height 100%

.inner_content
  // opacity-transition(1.5s)
  max-height 100px
  padding 5px
  text-align center
  position absolute
  top 0
  right 0
  bottom 0
  left 0
  margin auto
  
.default_button
  box-shadow(0 1px 2px rgba(0, 0, 0, 0.4))
  font-size 18px
  font-family 'PT Sans'
  text-align center
  margin auto
  line-height 60px
  padding 0px 10px
  height 60px
  display inline-block

.call_to_action
  @extend .default_button
  background-color #ff6600
  color #ffffff
  width 385px
  -webkit-border-top-right-radius 2px
  -webkit-border-bottom-right-radius 2px
  -moz-border-radius-topright 2px
  -moz-border-radius-bottomright 2px
  border-top-right-radius 2px
  border-bottom-right-radius 2px

.conversation_id
  @extend .default_button
  border 0
  background-color rgb(255, 255, 255)
  color rgb(94, 56, 54)
  width 250px
  -webkit-border-top-left-radius 2px
  -webkit-border-bottom-left-radius 2px
  -moz-border-radius-topleft 2px
  -moz-border-radius-bottomleft 2px
  border-top-left-radius 2px
  border-bottom-left-radius 2px
  &:focus
    outline 0

.join_conversation
  @extend .default_button
  border solid 1px #e2e1e9
  border-radius 2px
  background-color rgba(71,71,71,0.27)
  color #ffffff
  font-size 18px
  font-family 'PT Sans'
  text-align center
  box-shadow(0 1px 2px rgba(0, 0, 0, 0.4))
  padding 0px 10px
  width: 372px

.how_does_it_work
  @extend .default_button
  border-radius(2px)
  background-color #ff6600
  width 150
  color #ffffff
  font-size 14px
  font-style normal
  font-family 'PT Sans'
  text-align center
  position absolute
  bottom 0
  left 50%
  margin-left -75px
  
.guide
  background-color rgb(255, 255, 255)
  position relative
  width 100%
  margin 0 auto
  height 180px
  .circles
    padding 40px 0
    position absolute
    margin 0 0 0 -25%
    left 50%
  .circle
    border-radius(50%)
    position relative
    display inline-block
    background-color #ff6600
    height 100px
    width 100px
    line-height 100px
    text-align center
    font-size 32px
    color rgb(255, 255, 255)
    .fa-link
      transform rotate(-45deg)
    .front_peer
      margin-left -10px
    .bg_peer
      font-size 26px
      position absolute
      top 30px
      right 30px

  .chain
    display inline-block
    height 100px
    line-height 72px
    font-size 72px
    margin 0 30px
    position relative
    top 10px
    font-family 'PT Sans'
    color #ff6600


h2
  color rgb(255, 255, 255)
  margin 20px 0

h1
  font-family 'PT Sans'
  color rgb(255, 255, 255)
  display inline
  font-size 48px
  font-style normal
  font-weight normal
  height auto
  line-height normal
  margin 0
  padding 0
  text-align left
  width auto
  position absolute
  top 10px
  left 10px